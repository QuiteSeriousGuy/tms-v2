
@{
    ViewBag.Title = "AddTask";
}

<head>
    @Styles.Render("~/Content/styleD.css")
</head>
@Html.Partial("NavBar")

<div class="container">
    <section class="content-header">
        <h2>
            Task Detail
        </h2>
        <ol class="breadcrumb">
            <li><a href="../Software/Dashboard"><i class="fa fa-table"></i> Home</a></li>
            <li> <a href="../Software/Task">Task</a></li>
            <li class="active">Add Task</li>
        </ol>
    </section>

    <form class="form-horizontal" id="add-form">
        <div class="form-group">
            <label for="tdate" class="col-sm-2 control-label">Task Date</label>
            <div class="col-sm-3">
                <input type="text" class="form-control requiredField" id="tdate" required>
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Task No</label>
            <div class="col-sm-3">
                <input type="text" class="form-control requiredField" id="companyAddress">
            </div>
        </div>
        <div class="form-group">
            <label for="barCode" class="col-sm-2 control-label">Caller</label>
            <div class="col-sm-4">
                <input type="text" class="form-control requiredField" id="contactNumber">
            </div>
        </div>
    </form>

</div>

@Html.Partial("Footer")