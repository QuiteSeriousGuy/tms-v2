                        min: new Date(2014, 8, 1, 9, 0),
                        max: new Date(2014, 8, 1, 20, 0),
                        step: 1,
                        format: 'h:mm tt',
                        value: doneTime,
                        disabled: true,
                        onValueChanged: function () {
