                    console.log(tm);
                    if (tm == "P") {  //if time is PM, add 12 hours
                        fhour = parseInt(hour[0], 10);
                        doneTime.setHours(fhour + 12);
                        console.log(fhour);
                    } else {
                        doneTime.setHours(fhour);
